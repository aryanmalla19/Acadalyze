# Use a specific PHP version with Apache
FROM php:8.2-apache

# Set the working directory to /var/www/html
WORKDIR /var/www/html

# Install required PHP extensions (example: pdo_mysql and others if needed)
RUN apt-get update && apt-get install -y \
    && docker-php-ext-install pdo_mysql \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Copy backend code to the container
# This assumes that the Dockerfile is inside the backend folder
COPY . /var/www/html

# Set permissions for Apache
RUN chown -R www-data:www-data /var/www/html \
    && find /var/www/html -type d -exec chmod 755 {} \; \
    && find /var/www/html -type f -exec chmod 644 {} \;

# Copy custom Apache virtual host configuration to serve /public as the document root
COPY docker/vhost.conf /etc/apache2/sites-available/000-default.conf

# Enable Apache modules if needed (e.g., rewrite)
RUN a2enmod rewrite

# Expose port 80 (inside the container)
EXPOSE 80

# Start Apache in the foreground
CMD ["apache2-foreground"]
